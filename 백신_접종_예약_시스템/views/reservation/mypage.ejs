<!-- 네비게이션 바 -->

<script>
    function reservation_cancel(rid){
        $.ajax({
           url: "/reservation/" + rid,
           type: "delete",
            success: function(data){
               console.log(data);
               alert(data['message']);
               location.reload();
            }
        });
    }


</script>


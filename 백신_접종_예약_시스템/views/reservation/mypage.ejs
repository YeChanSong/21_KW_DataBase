        <!-- Main Content -->
        <div id="content">
            <!-- Begin Page Content -->
            <div class="container-fluid p-5">
                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">마이페이지</h1>
                <h5>예약 확인</h5>
                <div class="row">
                    <% for(var i = 0; i < rows.length; i++){%>
                    <div id="card<%=rows[i].reservation_id%>>" class="col-xl-5">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6><%=rows[i].hospital_name%></h6>
                                <h6><%=rows[i].reservation_date%></h6>

                                <!-- 접종완료한 예약들에 대해서 후기 작성 버튼 또는 수정/삭제 버튼 표시 -->
                                <!-- 접종미완료 예약들에 대해서 예약 취소 버튼 표시 -->
                                <%if (rows[i].Vaccinated_Number >= rows[i].inoculation_number) {%>
                                    <form action="<%= (rows[i].comment_id) ? '/reviews/' + rows[i].comment_id : '/reviews/write'%>" method="post" target="_blank">
                                        <input type="hidden" name="reservation_id" value="<%=rows[i].reservation_id%>">
                                        <input type="hidden" name="user_number" value="<%=rows[i].User_number%>">
                                        <button type="submit"><%= (rows[i].comment_id) ? '후기 수정 및 삭제' : '후기 작성' %></button>
                                    </form>
                                <%} else {%>
                                    <button onclick="reservation_cancel('<%=rows[i].reservation_id%>')">예약 취소</button>
                                <%}%>
                            </div>
                        </div>
                    </div>
                    <%}%>
                </div>
            </div>
            <!-- /.container-fluid -->

        </div>
